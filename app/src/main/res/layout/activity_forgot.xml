<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgot">

    <ImageButton
        android:id="@+id/ibSign"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/back_arrow_1" />

    <TextView
        android:id="@+id/txtForgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Forgot Password"
        android:textSize="20dp"
        android:textColor="@color/dark"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/Pforgot"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@id/picForgot"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:fontFamily="@font/poppins_medium"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        android:textSize="16dp" />

    <Button
        android:id="@+id/signForgot"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@id/Pforgot"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_buttons"
        android:fontFamily="@font/poppins_medium"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/picForgot"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/txtForgot"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/forgot_pass" />
</RelativeLayout>