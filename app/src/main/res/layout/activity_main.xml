<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="60dp"
        android:text="Dormflix"
        android:textColor="@color/dark"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/splashScreen"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_below="@id/appName"
        android:layout_centerInParent="true"
        android:contentDescription="Splash Image"
        android:src="@drawable/first" />

    <TextView
        android:id="@+id/splashText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splashScreen"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_medium"
        android:paddingTop="36dp"
        android:paddingBottom="36dp"
        android:minLines="2"
        android:gravity="center"
        android:text="Best way to manage and\n find your dorm!"
        android:textColor="@color/dark"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@+id/splashText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16px"
        app:backgroundTint="@null"
        android:background="@drawable/round_buttons"
        android:fontFamily="@font/poppins_medium"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="16sp"

        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24px"
        app:backgroundTint="@null"
        android:background="@drawable/round_buttons2"
        android:fontFamily="@font/poppins_medium"
        android:text="Sign Up"
        android:textColor="@color/dark"
        android:textSize="16sp"
        android:textAllCaps="false" />

</RelativeLayout>