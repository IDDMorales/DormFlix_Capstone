<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/imgHold"
                android:layout_width="407dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@drawable/dorm1" />

            <TextView
                android:id="@+id/dName"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:layout_marginStart="15dp"
                android:text="Bossing's Place"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                app:layout_constraintTop_toBottomOf="@+id/imgHold"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/dPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tablang, Paniqui"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toStartOf="@id/dName"
                app:layout_constraintTop_toBottomOf="@+id/dName"/>

            <TextView
                android:id="@+id/dPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="1500 PHP"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintStart_toEndOf="@id/dPlace"
                app:layout_constraintTop_toBottomOf="@+id/dName"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>